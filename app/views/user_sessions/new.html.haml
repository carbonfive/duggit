#login
  %h2 Login

  = form_for @user_session, :as => :user_session, :url => user_session_path do |form|
    %fieldset
      = form.label :username
      = form.text_field :username
    %fieldset
      = form.label :password
      = form.password_field :password
    %fieldset
      = form.submit "Login"
